<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ButtonActivity" >

    <EditText
        android:id="@+id/inputMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="InputMessage" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="DisplayMessage"
        android:text="DisplayMessage" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="No Message"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttoncolordispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:text="RedColor" />

    <Button
        android:id="@+id/buttoncolordisplayblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttoncolordispaly"
        android:layout_alignBottom="@+id/buttoncolordispaly"
        android:layout_alignRight="@+id/inputMessage"
        android:text="BlueColor" />

</RelativeLayout>
